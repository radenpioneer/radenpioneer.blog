---
import type { CollectionEntry } from 'astro:content'

interface Props {
  site: CollectionEntry<'site'>
}

const { site } = Astro.props
---

<header class='container'>
  <nav>
    <ul>
      <li>
        <a href='/'>{site.data.title}</a>
      </li>
    </ul>
    <ul>
      {
        site.data.nav && (
          <>
            {site.data.nav.map((link) => (
              <li class='__menu_link'>
                <a href={link.url}>{link.label}</a>
              </li>
            ))}
          </>
        )
      }
      <li class='__menu_btn'>
        <button class='outline'></button>
      </li>
    </ul>
  </nav>
</header>

<style lang='scss'>
  .__menu_btn {
    button::before {
      content: '';
      display: inline-block;
      width: 16px;
      height: 16px;
      background-color: var(--pico-color);
      mask-image: url('data:image/svg+xml;base64,');
      mask-size: contain;
      mask-repeat: no-repeat;
    }

    @media (width >= 768px) {
      display: none;
    }
  }

  .__menu_link {
    @media (width < 768px) {
      display: none;
    }
  }
</style>
